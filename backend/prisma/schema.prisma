// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                    String   @id @default(uuid())
  orderNumber           Int      @unique
  
  // Screen 1 - Ridicare
  deliveryMethod        String
  location              String?
  address               String?
  staffName             String
  clientName            String
  phoneNumber           String
  pickupDate            DateTime
  tomorrowVerification  Boolean  @default(false)
  advance               Float?
  
  // Screen 2 - Sortiment
  noCake                Boolean  @default(false)
  cakeType              String?
  weight                String?
  customWeight          String?
  shape                 String?
  floors                String?
  otherProducts         String?
  
  // Screen 3 - Decor
  coating               String?
  colors                String[]
  decorType             String?
  decorDetails          String?
  observations          String?
  
  // PDF
  pdfPath               String?
  
  // User who created the order
  createdByUsername     String?
  
  // User who picked up the order
  pickedUpByUserId      String?
  pickedUpBy            User?    @relation("PickedUpOrders", fields: [pickedUpByUserId], references: [id])
  
  photos                Photo[]
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Photo {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  url       String
  path      String?
  createdAt DateTime @default(now())
}

model OrderCounter {
  id        String   @id @default(uuid())
  lastOrder Int      @default(0)
  updatedAt DateTime @updatedAt
}

model User {
  id             String       @id @default(uuid())
  username       String       @unique
  password       String       // Hashed password
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  pickedUpOrders Order[]      @relation("PickedUpOrders")
}

model GlobalConfig {
  id          String   @id @default(uuid())
  category    String   // 'sortiment' or 'decor'
  key         String   // 'cakeTypes', 'weights', 'shapes', 'floors', 'coatings', 'colors', 'decorTypes'
  value       Json     // Array of options
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([category, key])
}
