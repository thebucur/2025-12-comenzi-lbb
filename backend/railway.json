{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "npm install && npm run build",
    "watchPaths": [
      "backend/**"
    ]
  },
  "deploy": {
    "startCommand": "npx prisma db push && node dist/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}












